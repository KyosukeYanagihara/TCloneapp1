<h1>つぶやき一覧</h1>
<p><%= notice %></p>
<% @words.each do |word| %> 
<table>
  <tr>
    <td><%= word.content %></td>
    <td><%= link_to "詳細", word_path(word.id) %></td>
    <td><%= link_to "編集", edit_word_path(word.id) %></td>
    <td><%= link_to "削除", word_path(word.id), method: :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくブログを投稿する', new_word_path %>
